extends layout
block content
    #container
        #edit
            form(name="edit")
                input.id(type="hidden",name="id")
                #edit-container
                    fieldset
                        legend 修改
                            span.tips
                        a.img(target='_blank')
                            img
                        p
                            input(type="text",name='title',placeholder="请输入标题")
                        p
                            textarea(name="describe",placeholder="请输入文本")
                        p
                            button.btn.btn-primary.save(type="submit") 保存并关闭
                            button.btn.continue(type="submit") 保存并编辑下一张图片
                            button.btn.cancel(type="button")  取消
        #filter.control-panel(data-on="筛选文件",data-off="隐藏")
        #control.control-panel(data-on="文件归类",data-off="隐藏")
            .filter-container
                h4 Category
                .color
                    .btn-group
                        .btn(t="category",value="EDM") EDM
                        .btn(t="category",value="WEB") Web
                        .btn(t="category",value="活动页") 活动页
                        .btn(t="category",value="手机端") 手机端
                        .btn(t="category",value="Banner") Banner
                        .btn(t="category",value="Logo") Logo
                        .btn(t="category",value="Icon") Icon
                        .btn(t="category",value="风采秀") 风采秀
                        .btn(t="category",value="其他") 其他
                        .btn(t="category",value="") 未分类
                h4 Color
                .color
                    span(rel="tooltip",t="color",title="未设置颜色",value="",style="color:black;") 未设置颜色
                    span(rel="tooltip",t="color",title="配色",value="配色",style="color:black;") 配色
                    span(rel="tooltip",t="color",title="红色",value="红色",style="background-color:#DE2020;")
                    span(rel="tooltip",t="color",title="橙色",value="橙色",style="background-color:#FE6C00;")
                    span(rel="tooltip",t="color",title="黄色",value="黄色",style="background-color:#FEBF00;")
                    span(rel="tooltip",t="color",title="绿色",value="绿色",style="background-color:#59A725;")
                    span(rel="tooltip",t="color",title="紫色",value="紫色",style="background-color:#892BCF;")
                    span(rel="tooltip",t="color",title="粉色",value="粉色",style="background-color:#D744BA;")
                    span(rel="tooltip",t="color",title="青色",value="青色",style="background-color:#06B7C8;")
                    span(rel="tooltip",t="color",title="蓝色",value="蓝色",style="background-color:#0065FE;")
                    span(rel="tooltip",t="color",title="棕色",value="棕色",style="background-color:#733413;")
                    span(rel="tooltip",t="color",title="白色",value="白色",style="background-color:white;")
                    span(rel="tooltip",t="color",title="黑色",value="黑色",style="background-color:black;")
                h4 Date
                .date
                    .btn-group
                        a.btn(href="#",t="date",value="") 不限
                        a.btn(href="#",t="date",value="2008") 2008
                        a.btn(href="#",t="date",value="2009") 2009
                        a.btn(href="#",t="date",value="2010") 2010
                        a.btn(href="#",t="date",value="2011") 2011
                        a.btn(href="#",t="date",value="2012") 2012
                        a.btn(href="#",t="date",value="2013") 2013
                        a.btn(href="#",t="date",value="2014") 2014
                h4 Series
                .series
                    .btn-group
                        a.btn(href="#",t="series",value="") 不限
                        a.btn(href="#",t="series",value="中国风") 中国风
                        a.btn(href="#",t="series",value="双11") 双11
                        a.btn(href="#",t="series",value="绝密档案活动页") 绝密档案活动页
                        a.btn(href="#",t="series",value="清爽系") 清爽系
                        a.btn(href="#",t="series",value="深色系") 深色系
                h4 Company
                .series
                    .btn-group
                        a.btn(href="#",t="company",value="") 未设置
                        a.btn(href="#",t="company",value="淘宝") 淘宝
                        a.btn(href="#",t="company",value="天猫") 天猫
                        a.btn(href="#",t="company",value="支付宝") 支付宝
                        a.btn(href="#",t="company",value="阿里其他") 阿里其他
                        a.btn(href="#",t="company",value="京东") 京东
                        a.btn(href="#",t="company",value="腾讯") 腾讯
                        a.btn(href="#",t="company",value="百度") 百度
                        a.btn(href="#",t="company",value="谷歌") 谷歌
                b.switch 隐藏
        #select-control.btn-group
            a.btn(action='all',href="#") 所有
            a.btn(action='inverse',href="#") 反选
            a.btn(action='cancel',href="#") 取消
        h5#status  将图片拖曳到这里来上传
        .progress.progress-striped.active.hide
            #p.bar(style="width:0%;") 0%
        #pic
            #img-container
        #upload-mask

    form(action='/admin/save-psd',id="psd-form",enctype="multipart/form-data")
    #drag-tips
